extends layout

block content
    profilebox(class=boxType)
        p
            if style
                | #[i #{style}]
                br
                | #[span.big-and-strong #{shortTitle}]
            else
                | #[span.big-and-strong #{shortTitle}]
        figure.pbox
            img.pbox(src="/images/"+profilePhoto)
        table.pbox
            if otherNames
                tr
                    td Other Names
                    td #{otherNames}
            tr
                td Surname
                td #{surname}
            tr
                td Forename
                td #{forename}
            tr
                td #[a(href="/asis/Rank") Rank]
                td #{rank}
            tr
                td Addressed As
                td &ldquo;#{addressedAs}&rdquo;
    h1 #{shortishTitle}
    p !{bio}

    h2 Cyprian Data
    h3 Cyprian Legal Name
    p #{cyprianLegalName}
    if otherTitles != null
        h4 Other Titles
        p #{otherTitles}
    if accolades != null
        h4 Accolades
        p !{accolades}
    if arms != null
        h4 Arms
        p #{refTitle}'s coat of arms is given below:
        img(src="/images/"+arms, width=900)

    h2 Other Data
    if otherData
        p !{otherData}
    else
        p #[i None as yet.]
